{
  "manifest_version": 3,
  "name": "Metrika Goal Tracker",
  "version": "2.1.0",
  "description": "Отслеживает Яндекс.Метрику: ID счётчика и цели (goal://...) и показывает их в DevTools.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "devtools_page": "devtools.html"
}
